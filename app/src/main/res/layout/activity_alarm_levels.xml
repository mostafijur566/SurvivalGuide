<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AlarmLevelsActivity">

    <TextView
        android:id="@+id/warning_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FIRE ALARM LEVELS"
        android:textColor="#fff"
        android:background="@color/orange"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:background="@color/yellow"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/img_fire_alarm"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:src="@drawable/firelevels"
                    android:layout_marginTop="20dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="According to the Bureau of Fire Protection\n\n● Fireout – Fire has been neutralized\n\n● Under Control – Decreasing Fire Risk\n\n● General Alarm – Fire Affecting Major Part of Area – 80 Fire Trucks\n\n● Task Force Delta – Affecting Significant Part of Area – 36 Fire Trucks\n\n● Task Force Charlie – Affecting Significant Part of Area – 32 Fire Trucks\n\n● Task Force Bravo – 15 X 15 Houses – 28 Fire Trucks\n\n● Task Force Alpha – 12 X 12 Houses – 24 Fire Trucks\n\n● Fifth Alarm – 10-11 Houses or High Rise Building – 20 Fire Trucks\n\n● Fourth Alarm – 8-9 Houses or High Rise Building – 16 Fire Trucks\n\n● Third Alarm – 6-7 Houses or High Rise Building – 12 Fire Trucks\n\n● Second Alarm – 4-5 Houses – 8 Fire Trucks\n\n● First Alarm – 2-3 Houses – 4 Fire Trucks"
                    android:padding="5dp"
                    android:layout_marginLeft="35dp"
                    android:textColor="#000"
                    android:textSize="20sp" />

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/orange"
        android:gravity="center"
        >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Back"
            android:textColor="#000"
            android:textSize="20sp"
            android:background="@drawable/round_yello"
            />

    </LinearLayout>

</LinearLayout>