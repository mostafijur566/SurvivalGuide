<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    android:gravity="center"
    tools:context=".LearnActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I-LIGTAS MOBILE APP"
        android:textColor="#fff"
        android:fontFamily="@font/aquire"
        android:textSize="25sp"
        android:padding="20dp"
        android:background="@drawable/round_text_view"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SURVIVAL GUIDES MAINLY FOCUSING IN 3 MAIN DISASTERS WITH DATA PROVIDED BY NATIONAL SERVICE TRAINING PROGRAM\n(NSTP)"
        android:padding="30dp"
        android:textColor="#fff"
        android:textSize="18dp"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btn_learn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="LEARN"
        android:fontFamily="@font/aquire"
        android:textSize="20sp"
        android:background="@drawable/round_text_view"
        android:padding="20dp"
        android:textColor="#fff"
        />

</LinearLayout>